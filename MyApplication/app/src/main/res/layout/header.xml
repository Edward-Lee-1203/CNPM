<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF">
    <ImageView
        android:id="@+id/header_motor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/imageheader" />

    <TextView

        app:layout_constraintTop_toBottomOf="@id/header_motor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/header_motor"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:textColor="#44b6be"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Traveling"
        android:textSize="24sp" />

    <TextView
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/header_motor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#44b6be"
        android:text="www.taimoorsikander.com"
        android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>